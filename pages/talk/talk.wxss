.table {
  margin-top: 5%; 
  border-right: 0;
  border-bottom: 0;
  width: 100%;
}
.tr {
  width: 100%;
  display: flex;
  justify-content: space-between;
}
.td1 {
  background: #E8E8E8;
  padding: 10px;
  text-align: left;
  width: 100%;
}
.td2 {
  background: #00FFFF;
  padding: 10px;
  text-align: right;
  width: 100%;
}
.sendmessage {
  background-color: white;
  width: 100%;
  position: fixed;
  bottom: 10rpx;
  display: flex;
  flex-direction: row;
}
 
.sendmessage textarea {
  width: 80%;
  font-size: 18px;
  border-bottom: 1px #000 solid; 
}
 
.sendmessage button {
  width: 75%;
  height: 80rpx;
  background-color: white;
  line-height: 40px;
  font-size: 14px;
  border: 1px solid #d0d0d0;
}
